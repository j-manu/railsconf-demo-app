<div class="flex min-h-full flex-col justify-center px-6 py-8 sm:py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-6 sm:mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: session_path, html: {"data-turbo-action": "replace"}, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, "Email address", class: "form-label" %>
        <%= form.email_field :email, autocomplete: "email", required: true, class: "form-input" %>
      </div>

      <div>
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "current-password", required: true, class: "form-input" %>
      </div>

      <div>
        <button type="submit" class="btn-primary w-full">Sign in</button>
      </div>
    <% end %>
  </div>
</div>
