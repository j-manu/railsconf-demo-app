<div id="<%= dom_id(message) %>" class="py-4">
 <% if message.user? %>
    <div class="flex items-start justify-end">
      <div class="bg-blue-500 text-white rounded-lg p-4 max-w-[80%]">
        <p><%= message.content %></p>
      </div>
    </div>
  <% else %>
    <div class="flex items-start">
      <div class="bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg p-4 max-w-[80%]">
        <p><%= simple_format(message.content) %></p>
      </div>
    </div>
  <% end %>
</div>
